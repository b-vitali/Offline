services.GeometryService.inputFile        : "su2020/common/geom_baseline.txt"
services.TFileService.fileName            : "nts._user_.lumiInfo.xxx.000000_00000.root"
outputs.defaultOutput.fileName            : "mcs._user_.lumiInfo.xxx.000000_00000.art"

