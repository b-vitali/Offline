# -*- mode:tcl -*-
// Lisa Goodenough, June 2019
//fcl file for running PrimaryProtonGun as a Replicated module

#include "fcl/minimalMessageService.fcl"
#include "fcl/standardProducers.fcl"
#include "fcl/standardServices.fcl"


# Give this job a name.
process_name :  beamtest4replicated

source : {
   module_type : EmptyEvent
   maxEvents : @nil
}

services : { @table::Services.Sim }

//services.scheduler: {
//  num_schedules: 2
//}

physics : {
 
   producers: {

      generate: @local::PrimaryProtonGun
   }


   p1 : [generate]  
   e1 : [outfile]

   trigger_paths  : [p1] 
   end_paths: [e1]
}


outputs: {

  outfile : {
    module_type : RootOutput
    fileName    : "data_beam_test_4_replicated.root"
  }

}

#------------------------------------------------------------------------------
# redefined parameters
#------------------------------------------------------------------------------
services.GeometryService.inputFile : "JobConfig/common/geom_baseline.txt"
